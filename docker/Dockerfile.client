FROM node:20.18 AS build-env
ARG APP_TAG_VERSION
ARG MOCK_VERSION

ENV NEXT_PUBLIC_APP_VERSION=${APP_TAG_VERSION}
ENV MOCK_VERSION=${MOCK_VERSION}

RUN echo "Testing NEXT_PUBLIC_APP_VERSION: $NEXT_PUBLIC_APP_VERSION, MOCK_VERSION: $MOCK_VERSION" && \
  node -e "console.log('process.env.NEXT_PUBLIC_APP_VERSION:', process.env.NEXT_PUBLIC_APP_VERSION); console.log('process.env.MOCK_VERSION:', process.env.MOCK_VERSION);"

